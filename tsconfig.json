{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
           "*": ["./src/*"],
        },
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
         "compilerOptions": {
            "module": "CommonJS"
         }
    },
    "include": ["./**/*.ts", "./**/*.tsx"]
}